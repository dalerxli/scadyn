install() {
	if [ ! -d "ext" ]; then
		mkdir ext
		cd ext
		git clone git@bitbucket.org:planetarysystemresearch/jvie_t_matrix
		git clone git@bitbucket.org:planetarysystemresearch/fastmm_v1.0
		cd ..
	fi
	
	make
	
	./scadyn --mesh examples/GRE-1.h5 -T examples/T-GRE-1.h5 --paramsfile examples/params.in
}

install
