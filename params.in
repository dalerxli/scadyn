#####   Physical setup  #######################################################
v0 0 0 0                # Initial velocity
w0 0 1d3 1d4            # Initial angular velocity
R0 i                    # r = random matrix, i = identity matrix

a 2.d-7                 # Equivalent radius
rho 3000.               # Density

T 5800                  # Black body temperature (K)
khat 0 0 1              # Wave vector direction
B 1d-9                  # External magnetic field (lies in x,z-plane) magnitude
B_psi 30                # Angle between B and k (in degrees)

refr 0.0                # Refractive index (set to zero to ignore)
refi 0.0
E 1d0                   # Amplitude of E at its maximum

#####  Run parameters   #######################################################
waves bnd               # Wavelength band options lin, inv, log, bnd
mueller_mode none       # Mueller matrix type, none, ave, ori, perf_ori
test_forces 5           # 0 = integrate, 1 = test methods, 2 = calc Qt, 
                        # 3 = stability analysis, 4 = write fields to file
                        # 5 = SOCpol-averaging of Mueller matrices
int_mode 0              # 0 = normal scattering dynamics integration,
                        # 1 = external alignment integration, 2 = both 
                        # sequentially

Tmat 1                  # 1 = file is usable / 0 = force T-matrix calculation
polarization 1          # 1 = lin / 2 = un
bars 10                 # in range lmb1-lmb2 nm
lambda1 200
lambda2 2000
whichbar 0              # 0 = use all
beam_shape 0            # 0 = plane wave, 1 = Gaussian, 2 = LG, 3 = Bessel
pl 0 0                  # Laguerre-Gaussian beam mode

choose_integrator 2     # 1 = RK4, 2 = VLV, 3 = PCDM
it_max 10000
it_log 0                # From end backwards, 0 = log every step
dt 1d0
rot_max 1d-3

N_mean 0	               # Samples in alignment rolling mean
tol_m 1d-1              # Tolerance to when state is declared aligned

is_aggr 0               # 0 = no

#####    T-VIE setup	   # (Most of the time can be left as is) ################
tol 1d-5                # GMRES tolerance
maxit 50                # Maximum number of GMRES iterations
restart 4               # GMRES restart
order 2                 # Order of M_ex
cell_size 1.8           # Cell size of the auxiliary grid
near_zone 1             # Near_zone distance (in aux-cells)
expansion_order 0       # Order of basis and testing functions
